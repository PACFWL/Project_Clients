<h1>Edit Customer</h1>
<form action="/customers/edit/{{customer.id}}" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" class="form-control" value="{{customer.name}}" required>
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" name="address" id="address" class="form-control" value="{{customer.address}}">
  </div>
  <div class="form-group">
    <label for="neighborhood">Neighborhood</label>
    <input type="text" name="neighborhood" id="neighborhood" class="form-control" value="{{customer.neighborhood}}">
  </div>
  <button type="submit" class="btn btn-primary">Update Customer</button>
</form>
