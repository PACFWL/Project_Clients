<h1>LIsta de Clientes</h1>
<a href="/customers/add" class="btn btn-primary">Adicionar cliente</a>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Origem</th>
      <th>Data do Contacto</th>
      <th>Observação</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each customers}}
    <tr>
      <td>{{this.nome}}</td>
      <td>{{this.telefone}}</td>
      <td>{{this.origem}}</td>
      <td>{{this.dataDoContacto}}</td>
      <td>{{this.observacao}}</td>
      <td>
        <a href="/customers/view/{{this.id}}" class="btn btn-info">Visualizar</a>
        <a href="/customers/edit/{{this.id}}" class="btn btn-warning">Editar</a>
        <a href="/customers/delete/{{this.id}}" class="btn btn-danger">Eliminar</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
